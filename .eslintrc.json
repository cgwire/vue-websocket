{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": false,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": ["html"],
    "rules": {
        "semi": ["error", "never"],
        "no-var": ["error"],
        "no-console": ["off"],
        "no-unused-vars": ["warn"]
    }
}
